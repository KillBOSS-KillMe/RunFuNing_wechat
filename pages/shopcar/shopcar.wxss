/* pages/shopcar/shopcar.wxss */
page{
  background: white;
}
.list{
    position: relative;
   width: 100%;
    height: 185rpx;
    /* background-color: red; */
    border-bottom: 1rpx solid #e9e9e9;
}
/* 编辑 */
.edit{
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f6f6f6;
  /* margin-top: 100rpx; */
}
.shopCar1{
  font-size: 34rpx;
  font-weight: bolder;
  margin-left: 26rpx;
  margin-top: 26rpx;
}
/* 删除 */
.dele_edit{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 30rpx;
  bottom: 25rpx;
}
/* 编辑标题 */
.edit_btn{
  position: absolute;
  font-size: 26rpx;
  color: #888;
  right: 30rpx;
}
/* 单选状态 */
.radio_chek{
    position: absolute;
    left: 30rpx;
    top: 70rpx;
    width: 40rpx;
    height: 40rpx;
}
/* 列表商品图片 */
.list_img{
    position: absolute;
    top: 20rpx;
    left: 20rpx;
    width: 144rpx;
    height: 144rpx;
    border-radius: 5rpx;
}
/* 列表规格 */
.cart_g_name{
  position: absolute;
  left: 200rpx;
  font-size: 26rpx;
  color: #aaa;
  top: 75rpx;
}
/* 收藏 */
.collert{
  position: absolute;
  font-size: 28rpx;
  right: 40rpx;
 top: 30rpx;
}
/* 收藏图标 */
.collert_img{
  position: relative;
  top: 2rpx;
width: 28rpx;
height: 28rpx;
}
/* 列表商品名称 */
.list_name{
  position: absolute;
  left: 200rpx;
  top: 30rpx;
  width: 300rpx;
  font-size: 30rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow:ellipsis;    
  white-space: nowrap;
}
/* 列表商品价格 */
.list_price{
  position: absolute;
  left: 200rpx;
  bottom: 20rpx;
  font-size: 25rpx;
  color: #999;
}
.list_price text{
  font-size: 32rpx;
  color:  #dc0909;
  font-weight: 600;
}
 
/* 列表商品删除 */
.list_del{
    position: absolute;
    right: 220rpx;
    bottom: 20rpx;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 44rpx;
}
/* 固定底部 */
.cont_bot{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 104rpx;
    line-height:104rpx;
    background: #fff;
    border-top: 2rpx solid #ebebeb;
}
/* 全选ICON */
.total-select{
    position: absolute;
    left: 30rpx;
    top: 34rpx;
    width: 40rpx;
    height: 40rpx;
}
/* 全选标题 */
.sel_count_name{
  position: absolute;
  left: 90rpx;
  top: 6rpx;
  font-size: 30rpx;
  color: #333;
}
 
/* 合计金额 */
.count_price{
 position: absolute;
 font-size:28rpx;
 left: 28rpx;
 /* color: #aaa; */
}
.count_price text{
  font-size: 34rpx;
  color: #dc0909;
}
/* 购物车为空 */
.list_none{
    padding:40rpx 0;
    color: #999;
    text-align: center;
    margin-top: 300rpx;
}
/* 提交 */
.submit{
position: absolute;
width: 200rpx;
height: 72rpx;
line-height: 72rpx;
right: 26rpx;
top: 14rpx;
font-size: 30rpx;
text-align: center;
color:#fff;
background-color:#FFB400;
border-radius: 8rpx;
}
.navigator-hover{
    background: none;
}
 
 
 
/*数量加减*/
.carts-num{
  position: absolute;
  right: 30rpx;
  bottom: 23rpx;
  /* background-color: red; */
  display: flex; 
  align-items: center; 
  text-align: center; 
  height: 50rpx;
}
.view_text_center{
  border: 1rpx solid #ebebeb;
  border-radius: 50rpx;
  font-weight: 600;
  font-size: 30rpx;
  color: #333;height: 50rpx;
  line-height: 50rpx;
  width: 76rpx;
  padding: 0 15rpx;
  /* width: 100%; */
  
}
.carts-num .minus, .carts-num .plus{
  margin: 10rpx; 
  color: #000; 
  text-align: center;
  height: 40rpx;  
  line-height: 40rpx; 
  width: 40rpx;
}
.carts-num .minus{
  font-size: 34rpx;
}
.carts-num .plus{
  font-size: 34rpx;
}
.address{
  background: white;
  border-bottom: 1rpx solid #F0f0f0;
  padding: 40rpx;
}
.username{
  margin: 10rpx;
  font-size: 32rpx;
  font-weight: bolder;
}
.phone{
  font-size: 22rpx;
  color:#A1A1A1;
}
.addressDetail{
  margin: 10rpx;
  font-size: 32rpx;
  color: #1F1501;
}
.deleteImg{
  width: 34rpx;
  height: 32rpx;
  position: absolute;
  right: 35rpx;
  top: 22rpx;
}